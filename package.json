    "@nestjs/typeorm": "^7.1.1",
    "bcryptjs": "^2.4.3",
    "joi": "^17.2.1",
    "mysql": "^2.18.1",
    "nest-cli": "^0.0.5",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.4.2",
    "@types/bcryptjs": "^2.4.2",
